<!DOCTYPE html>
<html>
<head>
  <title>Codestitch</title>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="csUserHeader">
  <% if current_user %>
    Logged in as <%= current_user.email %>. Hello, <%= current_user.first_name %>!
    <%= link_to "Log Out", logout_path %>
  <% else %>
    <%= link_to "Sign Up", signup_path %> or
    <%= link_to "Log In", login_path %>
  <% end %>
</div>

<% flash.each do |key, value | %>
  <%= content_tag(:div, class: "alert alert-#{key}") do %>
    <p><%= value %></p>
  <% end %>
<% end %>

<%= yield %>

</body>
</html>
