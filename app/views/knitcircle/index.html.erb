stitch();
setColor("#D4AF37");
stitch();
newRow();
setColor("#8A2BE2");
stitch();
setColor("#D4AF37");
stitch();
setColor("#8A2BE2");
stitch();
</textarea>
<textarea id="knitrobertasdiag" style="display:none">
var lineWidth = 4;
var blueStitches = 1;
setColor("blue");
stitch(blueStitches);
setColor("white");
stitch(lineWidth - blueStitches);
newRow();
blueStitches = blueStitches + 1; //now blueStitches is equal to 2
setColor("blue");
stitch(blueStitches);
setColor("white");
stitch(lineWidth - blueStitches);
newRow();
blueStitches = blueStitches + 1;
setColor("blue");
stitch(blueStitches);
setColor("white");
stitch(lineWidth - blueStitches);
newRow();
blueStitches = blueStitches + 1;
setColor("blue");
stitch(blueStitches);
setColor("white");
stitch(lineWidth - blueStitches);
blueStitches = blueStitches + 1;
</textarea>

<textarea id="knitcheckers" style="display:none">
// Knit a checkered pattern

for(a=0;a<11;a++) {
  for(b=0;b<5;b++) {
    setColor("#f5da35");
    stitch();
    setColor("#9123d5");
    stitch();
  }
  newRow();
  for(b=0;b<5;b++) {
    setColor("#9123d5");
    stitch();
    setColor("#f5da35");
    stitch();
  }
  newRow();
}
</textarea>

<textarea id="knitsusanssquare" style="display:none">
var pink = "#FFC0CB";
var lineWidth = 4;
setColor(pink);
stitch(lineWidth);
newRow();
stitch(lineWidth);
newRow();
stitch(lineWidth);
newRow();
stitch(lineWidth);
    
</textarea>

<textarea id="knitsusanssquare4x8" style="display:none">
var pink = "#FFC0CB";
var lineWidth = 8;
setColor(pink);
stitch(lineWidth);
newRow();
